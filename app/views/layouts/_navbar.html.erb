<div class=" hero">
  <div class="hero-head">
    <nav class="navbar">
      <div class="container">
        <div class="navbar-brand">
          <a class="navbar-item button is-text is-large is-info is-inverted" href="/">
              <i class="fas fa-dice"></i>
          </a>
      
        </div>
          <a role="button" class="navbar-burger burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
            <span aria-hidden="true"></span>
          </a>

        <div id="navMenu" class="navbar-menu">
          <div class="navbar-end">
            <% if session[:user_id].present? %>
            
              <%= link_to "Profile", user_path(session[:user_id]),{class: "navbar-item is-active"} %>

                <div class="navbar-item has-dropdown is-hoverable">
                  <a class="navbar-link">Meet ups</a>
                    <div class="navbar-dropdown">
                      <%= link_to "All", meet_ups_path, {class: "navbar-item"}%>
                      <%= link_to "Type", meet_up_types_path, {class: "navbar-item"} %>        
                    </div>
                </div>

              <%= link_to "Games", games_path, {class: "navbar-item"} %>  
              <%= link_to "Locations", locations_path, {class: "navbar-item"} %>  

            <div class="buttons">
              <%= button_to("Log out", logout_path, method: :delete, class: "button is-dark") %>            
            <% else %>         
              <%= link_to "Sign up", signup_path, {class: "button is-info"} %>
              <%= link_to "Log in", login_path, {class: "button is-light"} %>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </nav>
  </div>
</div>
    <br>