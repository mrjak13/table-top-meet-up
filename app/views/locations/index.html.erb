<h1 class="title">Locations</h1>

<ul>
	<% @locations.each do |location| %>
		<li class="subtitle"><%= link_to location.name, location_path(location) %></li>
	<% end %>
	<li>
		 <%= form_tag(locations_path, method: :get) do %>
			<div class="field has-addons">
			 	<div class="control">
			    	<%= text_field_tag "zip",nil, placeholder: "Search by Zip", class: "input" %>
			  	</div>
			  	<div class="control">
			  		<%= submit_tag("search", class: "button is-info")%>	
			  	</div>
			</div>
		<% end %>
	</li>
</ul><br>

<%= render partial: "/layouts/admin", locals: {admin_object: @locations.first.class.name.downcase} %>	

